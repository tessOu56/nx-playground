{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "target": "es2015",
    "types": ["jest", "node"],
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@nx-playground/ui-components": ["../../libs/ui-components/src"],
      "@nx-playground/design-system": ["../../libs/design-system/src"],
      "@nx-playground/i18n": ["../../libs/i18n/src"],
      "@nx-playground/api-client": ["../../libs/api-client/src"],
      "@nx-playground/auth-client": ["../../libs/auth-client/src"],
      "@nx-playground/hooks": ["../../libs/hooks/src"]
    }
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "jest.config.ts"
  ],
  "exclude": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
