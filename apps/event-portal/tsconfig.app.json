{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "module": "esnext",
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@nx-playground/ui-components": ["../../libs/ui-components/src"],
      "@nx-playground/design-system": ["../../libs/design-system/src"],
      "@nx-playground/i18n": ["../../libs/i18n/src"],
      "@nx-playground/api-client": ["../../libs/api-client/src"],
      "@nx-playground/auth-client": ["../../libs/auth-client/src"],
      "@nx-playground/hooks": ["../../libs/hooks/src"],
      "@nx-playground/logger": ["../../libs/logger/src"],
      "@nx-playground/validation": ["../../libs/validation/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "jest.config.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}
