{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/ui-components",
    "rootDir": "./src",
    "tsBuildInfoFile": "../../dist/libs/ui-components/tsconfig.lib.tsbuildinfo",
    "declaration": true,
    "composite": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["node", "vite/client"]
  },
  "references": [
    {
      "path": "../design-system/tsconfig.lib.json"
    },
    {
      "path": "../i18n/tsconfig.lib.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.css.ts",
    "src/**/*.css",
    "src/**/*.json"
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
