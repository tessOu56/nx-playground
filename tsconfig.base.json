{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@nx-playground/api-client": ["dist/libs/api-client"],
      "@nx-playground/auth-client": ["dist/libs/auth-client/src"],
      "@nx-playground/auth": ["dist/libs/auth"],
      "@nx-playground/console": ["dist/libs/console"],
      "@nx-playground/design-system": ["dist/libs/design-system/src"],
      "@nx-playground/events": ["dist/libs/events"],
      "@nx-playground/hooks": ["dist/libs/hooks"],
      "@nx-playground/i18n": ["dist/libs/i18n"],
      "@nx-playground/ui-components": ["dist/libs/ui-components"],
      "@nx-playground/vue-motion": ["libs/vue-motion/src"],
      "@nx-playground/angular-dashboard": ["apps/angular-dashboard/src"]
    }
  },
  "plugins": [
    {
      "name": "@vanilla-extract/typescript-plugin"
    }
  ],
  "exclude": ["node_modules", "tmp"]
}
