# ==================== pnpm 安全配置 ====================
# 防止惡意套件攻擊的安全配置

# 強制使用 frozen-lockfile（防止意外修改 lockfile）
frozen-lockfile=true

# 禁用自動安裝（防止惡意套件自動安裝）
auto-install-peers=false

# 禁用嚴格模式（允許 peer dependency 警告）
strict-peer-dependencies=false

# 禁用腳本執行（防止惡意腳本）
ignore-scripts=true

# 啟用審計（檢查已知漏洞）
audit=true

# 強制使用 HTTPS
registry=https://registry.npmjs.org/

# 禁用不安全的 HTTP 請求
strict-ssl=true

# 啟用套件完整性檢查
package-lock=true

# 禁用自動更新（防止意外更新到惡意版本）
update-notifier=false

# 啟用套件簽名驗證
verify-signatures=true
